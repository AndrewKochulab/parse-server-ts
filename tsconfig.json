{
  "compilerOptions": {
    "module": "es6",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "../dist/out-tsc",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "es2015"

  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
